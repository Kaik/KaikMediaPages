{% include 'KaikmediaPagesModule:Common:resources.html.twig'  %}
<div class="panel">
  <div class="panel-body">
	<div > 
	<div class="title col-md-9" > 
	    <h1>{{ page.title }}
		</h1>	
	</div>
	<div class="menu col-md-4 pull-right" > 
	</div>
	</div>
	<div> 
	       <div class="col-md-12" >          
	           {%for image in page.images %}
	              <div class="col-md-4">
	                <div class="col-md-12 thumbnail">
	                {% if image.path %}        
	                <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/web/uploads/documents/' ~ image.path}}" />
	                {% endif %}
	                </div>
	              </div>  
	           {% endfor %}              
	        </div>      	        
	<div class="col-md-12" > 	        
	    {{ page.content|raw }}      
	</div>	              
	</div>
  </div>
</div>



