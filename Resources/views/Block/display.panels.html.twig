{% for page in pages %}  
<div class="col-md-4">
<div class="panel">
  <div class="panel-body">
          {% if page.getPromotedImage() != null %}
     <img src="{{ app.request.scheme ~ '://' ~ app.request.host ~ '/web/uploads/documents/' ~ page.getPromotedImage().getPath()}}" class="center-block" />
     {% endif %}
      <div class="">
        <a href="{{ path('kaikmediapagesmodule_user_about', {'_locale': translator.locale, 'urltitle': page.urltitle}) }}"> <h2 class="text-left"> {{ page.title }} </h2> </a>
        <p class="text-left">
        {{ page.description }}
        </p>
      </div>
  </div>
</div>
</div>    
{% endfor %}