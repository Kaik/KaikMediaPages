{% extends 'KaikmediaPagesModule:Base:admin.html.twig' %}
{% block header %}
    {% set settings='settings' %}
    {{ parent() }}
    {#{ pageAddAsset('stylesheet', zasset('@ZikulaIntercomModule:css/inbox.css')) }#}
{% endblock %} 
{% block title %}
    {% set title_icon="<i class='fa fa-user-secret'></i>" %}
    {% set title=__('Pages') %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div id="km_pages_admin_index" class="col-md-12 clearfix">    
        {% form_theme form 'bootstrap_3_layout.html.twig' %}
        <h3>
            <span class="fa fa-wrench"></span>
            {{  __('Settings')}}
        </h3>       
        <div class="container-fluid">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <div class="col-md-12">
                <div class="col-md-6">
                    <h3>{{  __('General settings') }}</h3>    
                    <div class="col-md-6">
                        <p>{{  __('Items per page') }}</p>
                    </div>
                    <div class="col-md-6">
                        {{ form_widget(form.itemsperpage) }}
                    </div> 
                </div>         

                <div class="col-md-12">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
                </div>

                {{ form_end(form) }} 
            </div>   
        </div>
    {% endblock %}
    {% block footer %}
        {{ parent() }}
        {#{ include('ZikulaIntercomModule:Base:modal.html.twig') }#}
        {#{ pageAddAsset('javascript', zasset('@ZikulaIntercomModule:js/Zikula.Intercom.inbox.manager.js')) }}
        <script>
        (function($) {
                $(function(){
                    Zikula.Intercom.InboxManager.init();  
                });
        })(jQuery);
        </script>
        {#{ dump() }#}
    {% endblock %}